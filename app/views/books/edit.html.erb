<%= form_for @book, :html => { :class => "form-horizontal menu" } do |f| %>

    <% if @book.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@book.errors.count, "error") %> prohibited this menu from being saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @book.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :isbn %><br />
      <%= f.text_field :isbn, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_field :description %>
    </div>

    <div class="field">
      <%= f.label :authors %><br />
      <%= f.text_field :authors %>
    </div>

    <div class="field">
      <%= f.label :status %><br />
      <%= f.select :status, options_for_select([["Available", 0], ["Checked Out", 1]]) %>
    </div>

    <%= f.submit 'Update', :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', books_path, :class => 'btn btn-default' %>

<% end %>
